{
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
  // 1) Always format on save
  "editor.formatOnSave": true,

  // 2) Run “organize imports” (isort) on save
  "editor.codeActionsOnSave": ["source.organizeImports"],

  // 3) Tell VS Code to use Black as the formatter for Python
  "[python]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.tabSize": 4
  },

  // 4) Set Python indent width to 4 spaces
  "editor.tabSize": 4,
}
